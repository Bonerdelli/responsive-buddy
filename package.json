{
  "name": "responsive-buddy",
  "version": "1.1.0",
  "description": "A lightweight and fully customisable CSS framework, with 12-columns responsive grid",
  "main": "dist/buddy.min.css",
  "scripts": {
    "build": "lessc ./source/_main.less ./dist/buddy.css",
    "build-min": "lessc --autoprefix --clean-css='--s1 --advanced' ./source/_main.less ./dist/buddy.min.css",
    "build-all": "npm run build && npm run build-min"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bonerdelli/responsive-buddy.git"
  },
  "author": "Andrey Nekrasov <bonerdelli@gmail.com>",
  "contributors": [
    "Andrey Nekrasov <bonerdelli@gmail.com>",
    "Artemiy Egorov <artemiy@spentapp.com>"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Bonerdelli/responsive-buddy/issues"
  },
  "homepage": "https://github.com/Bonerdelli/responsive-buddy#readme",
  "devDependencies": {
    "less": "^2.7.3",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1"
  },
  "browserslist": "last 2 versions"
}
